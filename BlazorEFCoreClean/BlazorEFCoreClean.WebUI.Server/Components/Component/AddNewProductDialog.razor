@using BlazorEFCoreClean.Application.DTOs

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            Add Product?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="productDto.Name" T="String" Label="Name" />
        <MudTextField @bind-Value="productDto.Price" T="decimal" Label="Price" />
        <MudTextField @bind-Value="productDto.StockQuantity" T="int" Label="StockQuantity" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="AddProduct">Add Product</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public ProductDto productDto { get; set; } = new ProductDto();

    private void Cancel() => MudDialog.Cancel();

    private void AddProduct()
    {
        MudDialog.Close(DialogResult.Ok(productDto));
    }
}
