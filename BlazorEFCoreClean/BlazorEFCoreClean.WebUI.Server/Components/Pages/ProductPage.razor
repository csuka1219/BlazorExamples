@page "/products"
@using BlazorEFCoreClean.Application.DTOs

<MudButton OnClick="CreateProduct" Variant="@Variant.Filled" Color="@Color.Success" Class="add-item-btn">Add Item</MudButton>
<MudButton OnClick="OrderProducts" Variant="@Variant.Filled" Color="@Color.Success" Class="add-item-btn">Order selected Items</MudButton>

<MudDataGrid T="ProductDto" Items="@_products" MultiSelection SelectedItemsChanged="@SelectedItemsChanged">
    <Columns>
        <SelectColumn T="ProductDto" />
        <PropertyColumn Property="x => x.Name" />
        <PropertyColumn Property="x => x.Price" />
        <PropertyColumn Property="x => x.StockQuantity" />
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudButton OnClick="() => EditProduct(context.Item)" Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary">Edit</MudButton>
                    <MudButton OnClick="() => DeleteProduct(context.Item.Id)" Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Error">Delete</MudButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>
